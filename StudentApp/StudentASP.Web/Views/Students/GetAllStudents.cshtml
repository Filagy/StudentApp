@model List<Student>

<div class="row col-12 mt-4">
    <h1>Все студенты</h1>
</div>

<table class="table mt-4">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Номер группы</th>
            <th scope="col">Классный руководитель</th>
            <th scope="col">Средний балл</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Student student in Model)
        {
            <tr>
                <th scope="row">@student.FirstName</th>
                <th>@student.LastName</th>
                <th>@student.Group.NumberGroup</th>
                <th>@student.Group.TeacherClassroom.LastName</th>
                <th>@student.Scores.Average(x=>x.Value).ToString("#.#")</th>
            </tr>
        }

    </tbody>
</table>

